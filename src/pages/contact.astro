---
import BaseLayout from '../layouts/BaseLayout.astro';
import SEO from '../components/SEO.astro';
---

<BaseLayout>
  <SEO 
    slot="head"
    title="Contacto | Hernando Javier Garcia Mogollon"
    description="Ponte en contacto con Hernando Javier Garcia Mogollon, desarrollador Fullstack en Bogot√° D.C."
    type="website"
  />

  <main class="contact-page">
    <!-- Zona Principal -->
    <section class="primary-zone">
      <h1 class="name">Hernando Javier Garcia Mogollon</h1>

      <!-- Correo institucional: principal (mostrado de forma destacada, pero menor que el nombre) -->
      <a href="mailto:hjgarcia@unbosque.edu.co" class="email-link email-primary" title="Correo institucional">
        hjgarcia@unbosque.edu.co
      </a>

      <!-- Correo personal: secundario -->
      <a href="mailto:hernandogarcia06@hotmail.com" class="email-link email-secondary" title="Correo personal">
        hernandogarcia06@hotmail.com
      </a>

      <p class="phone">üì± 3007431620</p>
      <p class="location">üìç Bogot√° D.C.</p>

    </section>
  </main>

  <style>
    :root {
      /* Ajusta estas variables si quieres escalar tama√±os globalmente */
      --name-min: 1.8rem;
      --name-max: 2.8rem;
      --email-primary-min: 1.15rem;
      --email-primary-max: 1.8rem;
      --email-secondary: 1rem;
      --muted: var(--color-text-secondary, #9b9b9b);
      --text: var(--color-text, #fff);
    }

    .contact-page {
      max-width: 820px;
      margin: 0 auto;
      padding: 3.5rem 1.5rem 8rem;
    }

    .primary-zone {
      margin-bottom: 3rem;
    }

    /* Nombre: debe ser el elemento m√°s grande */
    .name {
      font-size: clamp(var(--name-min), 6vw, var(--name-max));
      line-height: 1.05;
      font-weight: 700;
      color: var(--text);
      margin: 0 0 1.25rem 0;
    }

    /* Estilo com√∫n para correos */
    .email-link {
      display: block;
      text-decoration: none;
      color: var(--text);
      transition: color 0.15s ease;
      margin-bottom: 0.5rem;
      word-break: break-all;
    }

    /* Correo institucional (principal), destacado pero menor que el nombre */
    .email-primary {
      font-size: clamp(var(--email-primary-min), 3.5vw, var(--email-primary-max));
      font-weight: 600;
      color: var(--text);
    }

    /* Correo personal (secundario) */
    .email-secondary {
      font-size: var(--email-secondary);
      font-weight: 500;
      color: var(--muted);
      margin-bottom: 1.25rem;
    }

    .email-link:hover {
      color: var(--color-text); /* mantiene contraste al pasar */
    }

    .phone,
    .location {
      font-size: 0.95rem;
      color: var(--muted);
      margin: 0.35rem 0;
    }

    .context {
      margin-top: 1.75rem;
      font-size: 0.95rem;
      color: var(--muted);
      line-height: 1.6;
    }

    @media (max-width: 640px) {
      .contact-page { padding: 3.5rem 1rem 6rem; }
      .name { font-size: clamp(1.6rem, 8vw, 2.2rem); }
      .email-primary { font-size: clamp(1rem, 4.5vw, 1.4rem); }
    }
  </style>
</BaseLayout>